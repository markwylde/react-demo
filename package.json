{
  "name": "react-demo",
  "private": true,
  "version": "0.0.1",
  "description": "A demo application to show react",
  "author": [
    "mark.wylde@verl.com"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:markwylde/react-demo.git"
  },
  "scripts": {
    "build": "npm run unit_tests && ./node_modules/.bin/gulp build",
    "lint": "./node_modules/.bin/gulp lint",
    "dev": "webpack-dev-server --hot --inline --config webpack_dev.config.js",
    "unit_tests": "./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover _mocha -- --recursive -i ./src/**/*.js -i ./src/**/**/*.js",
    "unit_tests_travis": "./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover _mocha --report lcovonly --  --recursive -i ./src/**/*.js -i ./src/**/**/*.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "e2e_tests": "./node_modules/protractor/bin/protractor protractor.conf.js",
    "test": "npm run lint && npm run unit_tests",
    "test_travis": "npm run lint && npm run unit_tests_travis"
  },
  "config": {
    "blanket": {
      "pattern": [
        "src"
      ],
      "data-cover-never": [
        "node_modules",
        "test"
      ]
    }
  },
  "devDependencies": {
    "autobind-decorator": "^1.3.2",
    "babel-core": "^5.8.22",
    "babel-istanbul": "^0.3.20",
    "babel-jscs": "^2.0.4",
    "babel-loader": "^5.3.2",
    "blanket": "^1.1.7",
    "bootstrap": "^3.3.5",
    "casperjs": "1.1.0-beta3",
    "chai": "^3.2.0",
    "chai-spies": "^0.7.0",
    "coveralls": "^2.11.4",
    "css-loader": "^0.18.0",
    "css-reset": "0.0.1",
    "eslint": "^1.0.0",
    "eslint-plugin-react": "^3.3.2",
    "file-loader": "^0.8.4",
    "flux": "^2.0.3",
    "font-awesome": "^4.4.0",
    "gulp": "^3.9.0",
    "gulp-eslint": "^1.0.0",
    "gulp-jscs": "^2.0.0",
    "gulp-jshint": "^1.11.2",
    "gulp-util": "^3.0.6",
    "gutil": "^1.6.4",
    "jquery": "^2.1.4",
    "jscs": "^2.1.0",
    "jsdom": "^3.1.2",
    "jshint-jsx": "^0.4.1",
    "jsxhint": "^0.15.1",
    "locale": "^0.0.20",
    "lodash": "^3.10.0",
    "mocha": "^2.3.2",
    "mocha-lcov-reporter": "0.0.2",
    "mocha-sinon": "^1.1.4",
    "mongodb": "~2.0",
    "node-sass": "^3.2.0",
    "protractor": "^2.2.0",
    "react": "^0.13.3",
    "react-bootstrap": "^0.25.1",
    "react-hot-loader": "^1.2.8",
    "request": "^2.61.0",
    "rewire": "^2.3.4",
    "rimraf": "^2.4.3",
    "sass-loader": "^2.0.1",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "vc-reset-css": "^0.2.2",
    "webpack": "^1.11.0",
    "babel": "^5.8.23",
    "gulp-istanbul": "^0.10.0",
    "gulp-jsx-coverage": "^0.2.5",
    "gulp-lab": "^1.0.5",
    "isparta": "^3.0.4",
    "lab": "^5.16.1"
  }
}
